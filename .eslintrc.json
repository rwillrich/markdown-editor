{
  "plugins": [
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc"
        }
      }
    ],
    "prettier/prettier": "error",
    "no-unused-vars": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  }
}
